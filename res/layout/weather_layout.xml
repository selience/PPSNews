<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
        android:id="@+id/weather_bg_imageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/weather_bg" />
    <RelativeLayout
        android:id="@+id/wather_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_weather" >
        <TextView
            android:id="@+id/weather_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:shadowColor="#9A000000"
            android:shadowDx="0"
            android:shadowDy="-3"
            android:shadowRadius="1"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/weather_refresh"
            android:layout_width="40dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:clickable="true"
            android:contentDescription="@string/empty"
            android:scaleType="centerInside"
            android:src="@drawable/weather_refresh_selector" />
        <ImageView
            android:id="@+id/weather_location"
            android:layout_width="40dip"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/weather_refresh"
            android:clickable="true"
            android:contentDescription="@string/empty"
            android:scaleType="centerInside"
            android:src="@drawable/weather_location_selector" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/wather_top_layout"
        android:background="@color/transparent" >
        <LinearLayout
            android:id="@+id/wather_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/weather_details_bottom_height"
            android:layout_alignParentBottom="true" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/weather_one_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.3dp"
                    android:textColor="#BF000000"
                    android:textSize="14.6sp" />
                <ImageView
                    android:id="@+id/weather_one_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
                <TextView
                    android:id="@+id/weather_one_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="#BF000000"
                    android:textSize="13.3sp" />
                <TextView
                    android:id="@+id/weather_one_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="#BF000000"
                    android:textSize="13.3sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:contentDescription="@string/app_name"
                android:src="#66000000" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/weather_two_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.3dp"
                    android:textColor="#BF000000"
                    android:textSize="14.6sp" />
                <ImageView
                    android:id="@+id/weather_two_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
                <TextView
                    android:id="@+id/weather_two_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="#BF000000"
                    android:textSize="13.3sp" />
                <TextView
                    android:id="@+id/weather_two_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="#BF000000"
                    android:textSize="13.3sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:contentDescription="@string/app_name"
                android:src="#66000000" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/weather_third_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.3dp"
                    android:textColor="#BF000000"
                    android:textSize="14.6sp" />
                <ImageView
                    android:id="@+id/weather_third_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
                <TextView
                    android:id="@+id/weather_third_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="#BF000000"
                    android:textSize="13.3sp" />
                <TextView
                    android:id="@+id/weather_third_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="#BF000000"
                    android:textSize="13.3sp" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/wather_bottom_layout" >
            <ImageView
                android:id="@+id/weather_image_big"
                android:layout_width="@dimen/weather_details_img_big_height"
                android:layout_height="@dimen/weather_details_img_big_height"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/weather_info"
                style="@style/weather_temp_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10.6dp"
                android:layout_marginTop="16dp" />
            <TextView
                android:id="@+id/weather_time"
                style="@style/weather_time_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/weather_info"
                android:layout_marginRight="10.6dp"
                android:layout_marginTop="12dp" />
            <LinearLayout
                android:id="@+id/weather_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/weather_pm_tv"
                    android:layout_width="60dp"
                    android:layout_height="21.3dp"
                    android:layout_marginLeft="10.6dp"
                    android:background="@drawable/weather_tv_bg"
                    android:gravity="center"
                    android:text="@string/pm"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/weather_pm"
                    style="@style/weather_other_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/weather_pm_info"
                    style="@style/weather_other_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/weather_info_layout"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/weather_temper"
                    style="@style/weather_temp_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.6dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>