<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="BaseTheme" parent="@android:style/Theme.NoTitleBar">        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="BaseTheme">        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
  		<item name="android:windowContentOverlay">@null</item>
    </style>
    
    
    <style name="Theme.Checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_checkbox_selector</item>
    </style>
    
    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="checkBoxstyle">
        <item name="android:layout_width">70dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/btn_switch_selector</item>
    </style>
    
    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    
      <!-- 天气文本效果 -->
    <style name="weather_temp_style">
        <item name="android:textSize">21.3sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">#000000</item>
    </style>
    
    <style name="weather_time_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">#000000</item>
    </style>
    
    <style name="weather_other_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">#000000</item>
    </style>
</resources>